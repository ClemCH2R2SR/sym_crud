{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}

{% block body %}
<h1>CECI EST MA PAGE D'ACCUEIL</h1>

{# {% for album in recentAlbums %}
    {% include 'album_template.html.twig' with { recentAlbums: album } only %}
{% endfor %} #}
<div class="container d-flex justify-content-center">
    <div class="row">
        {% for album in recentAlbums %}
        <div class="card" style="width: 15rem;">
        <img src="{{ album.cover }}" class="card-img-top" alt="image_album" width="100px " heigth="100px">
        <div class="card-body">
            <h5 class="card-title">{{ album.name }}</h5>
            <p class="card-text">{{ album.releaseYear }}</p>

            {% if album.artist.name is defined %}
            <p class="card-text">{{ album.artist.name }}</p>
            {% endif %}

            {% if album.artist.id is defined %}
            <a href="{{ path('artist_one', {'id': album.artist.id}) }}" class="btn btn-primary">Voir L'artiste</a>
            {% endif %}
        </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}